<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19.7dp"
                android:layout_marginRight="19.7dp"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.7dp"
                    android:layout_marginTop="30.8dp"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="@string/choose_place"
                    android:textColor="@color/graydark"
                    android:textSize="12.5sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.7dp"
                    android:background="@drawable/rect_gray_border"
                    android:orientation="horizontal"
                    android:padding="13dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="@string/udaipur"
                        android:textColor="@color/blacklight"
                        android:textSize="13.3sp" />

                    <ImageView
                        android:layout_width="16.5dp"
                        android:layout_height="16.5dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/worldicon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.7dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14.7dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="@string/check_in"
                        android:textColor="@color/graydark"
                        android:textSize="12.5sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="28.7dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="@string/check_out"
                        android:textColor="@color/graydark"
                        android:textSize="12.5sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rect_gray_border"
                    android:orientation="horizontal"
                    android:padding="13dp">

                    <LinearLayout
                        android:id="@+id/calender1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/today1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3.5dp"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="@string/today"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="16.5dp"
                        android:layout_height="16.5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/smallcalendar" />

                    <LinearLayout
                        android:id="@+id/calender2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="@string/_05_10_2018"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.7dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14.7dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="@string/passengers"
                            android:textColor="@color/graydark"
                            android:textSize="12.5sp" />

                        <LinearLayout
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rect_gray_border"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_width="180dp"
                                android:layout_height="45dp"
                                android:background="@drawable/custom_spinner"
                                android:padding="10dp"
                                android:spinnerMode="dropdown" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="@string/rooms"
                            android:textColor="@color/graydark"
                            android:textSize="12.5sp" />

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rect_gray_border"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/spinner1"
                                android:layout_width="90dp"
                                android:layout_height="45dp"
                                android:background="@drawable/custom_spinner"
                                android:padding="10dp"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/button_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31.3dp"
                    android:background="@drawable/rect_blue_cornor"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:gravity="center"
                    android:padding="13dp"
                    android:text="@string/search_for_hotels_amp_resorts"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35.7dp"
                    android:fontFamily="@font/sfpro_display_bold"
                    android:text="@string/recommended_for_you"
                    android:textColor="@color/black"
                    android:textSize="13.7sp" />

            </LinearLayout>
            <!--recycler use-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.7dp"
                android:clipToPadding="false"
                android:paddingLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16.3dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/view_more_packages"
                android:textColor="@color/black"
                android:textSize="13.7sp" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>