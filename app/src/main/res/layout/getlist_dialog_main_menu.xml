<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_white_dark"
    android:orientation="vertical">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/rect_gray" />

    <TextView
        android:id="@+id/txt_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29.3dp"
        android:layout_marginTop="38dp"
        android:letterSpacing="0.0425"
        android:fontFamily="@font/sfpro_display_bold"
        android:text="KEVIN CAINDAY"
        android:textColor="@color/blacklight"
        android:textSize="16.7sp" />

    <TextView
        android:id="@+id/email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29.3dp"
        android:layout_marginTop="5dp"
        android:letterSpacing="0.0425"
        android:fontFamily="@font/sf_pro_display_medium"
        android:text="kdcainday@gmail.com"
        android:textColor="@color/graydark"
        android:textSize="12.7sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22.7dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_sync_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:src="@drawable/ic_sync"
                    android:tint="@color/orange"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="Sync Data"
                    android:textColor="@color/darkblue"
                    android:textSize="13sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_switch_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:src="@drawable/ic_switch"
                    android:tint="@color/orange"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="Switch Mode"
                    android:textColor="@color/darkblue"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/graylight" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:id="@+id/ll_save_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:src="@drawable/ic_save"
                    android:tint="@color/orange"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="Save List"
                    android:textColor="@color/darkblue"
                    android:textSize="13sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_load_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:src="@drawable/ic_load"
                    android:tint="@color/orange"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="Load List"
                    android:textColor="@color/darkblue"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/graylight" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:id="@+id/ll_clear_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:src="@drawable/ic_clear"
                    android:tint="@color/orange"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="Clear List"
                    android:textColor="@color/darkblue"
                    android:textSize="13sp" />
            </LinearLayout>


<!--            <LinearLayout-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="22dp"-->
<!--                android:orientation="horizontal">-->


<!--                <ImageView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:src="@drawable/bathrobe" />-->

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginLeft="12dp"-->
<!--                    android:fontFamily="@font/sf_pro_display_medium"-->
<!--                    android:text="Switch Mode"-->
<!--                    android:textColor="@color/darkblue"-->
<!--                    android:textSize="13sp" />-->
<!--            </LinearLayout>-->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>