<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20.7dp"
    android:background="@drawable/table">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.7dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_cards"
            android:tint="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dp"
            android:layout_marginTop="2.5dp"
            android:fontFamily="@font/sfpro_display_bold"
            android:text="@string/app_name"
            android:textSize="17.5sp"
            android:textColor="@color/white"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>



        <ImageView
            android:id="@+id/action_reset"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_reload"
            android:tint="@color/white"/>

        <ImageView
            android:id="@+id/action_back"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/back"
            android:tint="@color/white"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/card_back"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@color/graylight"
            android:layout_margin="8dp" />

        <ImageView
            android:src="@drawable/card_back"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@color/graylight"
            android:layout_margin="8dp" />

        <ImageView
            android:src="@drawable/card_back"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@color/graylight"
            android:layout_margin="8dp" />

        <ImageView
            android:src="@drawable/card_back"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@color/graylight"
            android:layout_margin="8dp" />

        <ImageView
            android:src="@drawable/card_back"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@color/graylight"
            android:layout_margin="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/earth"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/enemy_earth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>

        <ImageView
            android:src="@drawable/wind"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/enemy_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>


        <ImageView
            android:src="@drawable/water"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/enemy_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>


        <ImageView
            android:src="@drawable/fire"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/enemy_fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>


        <ImageView
            android:src="@drawable/light"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:background="@color/graylight"/>

        <TextView
            android:id="@+id/enemy_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>


        <ImageView
            android:src="@drawable/dark"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:background="@color/graylight"/>

        <TextView
            android:id="@+id/enemy_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/enemy_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="@color/white"
                android:text="Health : 100\nDamage : 1\nDefence : 0" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/card_deck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/symbol"
            android:tint="@color/graylight"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">



        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="@color/white"
                android:text="Health : 100\nDamage : 1\nDefence : 0" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/action_convert_runes"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/symbol"
            android:tint="@color/orange"
            android:layout_gravity="bottom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <ImageView
            android:src="@drawable/earth"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/player_earth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>

        <ImageView
            android:src="@drawable/wind"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/player_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>


        <ImageView
            android:src="@drawable/water"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/player_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>


        <ImageView
            android:src="@drawable/fire"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/player_fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>


        <ImageView
            android:src="@drawable/light"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:background="@color/graylight"/>

        <TextView
            android:id="@+id/player_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>


        <ImageView
            android:src="@drawable/dark"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:background="@color/graylight"/>

        <TextView
            android:id="@+id/player_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="0"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/your_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/card_back"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@color/graylight"
            android:layout_margin="8dp" />

        <ImageView
            android:src="@drawable/card_back"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@color/graylight"
            android:layout_margin="8dp" />

        <ImageView
            android:src="@drawable/card_back"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@color/graylight"
            android:layout_margin="8dp" />

        <ImageView
            android:src="@drawable/card_back"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@color/graylight"
            android:layout_margin="8dp" />

        <ImageView
            android:src="@drawable/card_back"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@color/graylight"
            android:layout_margin="8dp" />

    </LinearLayout>

</LinearLayout>