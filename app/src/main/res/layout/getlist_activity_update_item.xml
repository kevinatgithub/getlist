<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Home_pageActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/action_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/sfpro_display_bold"
                    android:text="Update Item Details"
                    android:letterSpacing="0.0425"
                    android:textColor="@color/black"
                    android:textSize="16.7sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20.8dp"
                android:background="@color/graydark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.7dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="Item Name"
                android:textColor="@color/graydark"
                android:textSize="12.5sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_border"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:src="@drawable/ic_info" />


                <EditText
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:hint="Enter Item Name"
                    android:background="@color/transferent"
                    android:inputType="text"
                    android:textColor="@color/graydark"
                    android:textColorHint="@color/graydark"
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.7dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="Quantity"
                android:textColor="@color/graydark"
                android:textSize="12.5sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_border"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:src="@drawable/ic_info" />


                <EditText
                    android:id="@+id/txt_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:hint="Quantity"
                    android:background="@color/transferent"
                    android:inputType="text"
                    android:textColor="@color/graydark"
                    android:textColorHint="@color/graydark"
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.7dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="Category"
                android:textColor="@color/graydark"
                android:textSize="12.5sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_gray_border"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <Spinner
                        android:id="@+id/spinner_category"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_spinner"
                        android:padding="10dp"
                        android:spinnerMode="dropdown" />

                    <EditText
                        android:id="@+id/txt_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:hint="New Category"
                        android:background="@color/transferent"
                        android:inputType="text"
                        android:textColor="@color/graydark"
                        android:textColorHint="@color/graydark"
                        android:textSize="15sp"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="14.7dp"
                android:layout_marginTop="25dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="Remarks"
                    android:textColor="@color/graydark"
                    android:textSize="12.5sp" />

                <ImageView
                    android:id="@+id/action_load_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:src="@drawable/ic_load"
                    android:layout_marginLeft="8dp"
                    android:tint="@color/blue" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_gray_border"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/txt_remarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:hint="New Category"
                        android:background="@color/transferent"
                        android:inputType="textMultiLine"
                        android:lines="6"
                        android:minLines="3"
                        android:gravity="top|left"
                        android:maxLines="6"
                        android:scrollbars="vertical"
                        android:textColor="@color/graydark"
                        android:textColorHint="@color/graydark"
                        android:textSize="15sp"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.7dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="Select Item Image"
                android:textColor="@color/graydark"
                android:textSize="12.5sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_imgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="-12.5dp"
                android:clipToPadding="false"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/action_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31.3dp"
                android:background="@drawable/rect_blue_cornor"
                android:fontFamily="@font/sf_pro_display_medium"
                android:gravity="center"
                android:padding="13dp"
                android:text="Save Changes"
                android:textColor="@color/white"
                android:textSize="13sp" />



        </LinearLayout>
    </ScrollView>
</LinearLayout>
